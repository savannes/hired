<div class="container">
          <br>
          <br>
        <div>
          <%= month_calendar(events: @events, end_attribute: :ends_at, attribute: :starts_at) do |date, events| %>
            <%= date %>

            <% events.each do |event| %>
              <div class="meeting">
                <p>Title: <%= event.name %></p>
                <p>Description: <%= event.description %></p>
                <p>Start: <%= event.starts_at.strftime("%H:%M") %></p>
                <p>Finish: <%= event.ends_at.strftime("%H:%M") %></p>
                  <%= button_to calendar_event_path(event), method: :delete do %>
                  <i class="bi bi-trash3"></i>
                  <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
</div>
