<div class="d-flex align-items-center" style="height: calc(90vh - 110px);">
  <div class="container">
    <div class="align-items-center">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-md-4 text-center">
          <div class="card">
            <div class="card-body">
              <h2>Edit <%= resource_name.to_s.humanize %></h2>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>

                <div class="form-inputs">
                  <%= f.input :email, required: true, autofocus: true, :label => "Current email:" %>

                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>

                  <%= f.input :email, :label => "New email if you want to change:",
                              required: false, placeholder: "leave it blank if you don't want to change",
                              input_html: { autocomplete: "new-email" } %>
                  
                  <%= f.input :password, :label => "Password you want to change:",
                              required: false, placeholder: "leave it blank if you don't want to change",
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :password_confirmation, :label => "Password confirmation:",
                              required: false,placeholder: "leave it blank if you don't want to change",
                              input_html: { autocomplete: "new-password" } %>
                  <%= f.input :current_password, :label => "Current password:",
                              required: true, placeholder: "Type current password to confirm changes",
                              input_html: { autocomplete: "current-password" } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Update", class: "btn btn-light" %>
                </div>
              <% end %>
              <%= link_to "Back", :back, class: "btn btn-link" %>
            </div>
              <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>